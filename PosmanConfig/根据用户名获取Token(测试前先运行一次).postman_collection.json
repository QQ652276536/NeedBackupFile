{
	"info": {
		"_postman_id": "afa65bc7-c83b-4f28-909d-83fb966309cf",
		"name": "根据用户名获取Token(测试前先运行一次)",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "根据用户名密码获取token",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"tests[\"状态200\"] = responseCode.code === 200;",
							"tests[\"has token\"] = responseBody.has(\"token\");",
							"var jsonData = JSON.parse(responseBody);",
							"postman.setEnvironmentVariable(\"Bearer\", jsonData.result.token);",
							"",
							"//跳转到 Request3 接口",
							"//postman.setNextRequest(\"Request3\");"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"tenancyName\": \"{{tenancyName}}\",\r\n  \"username\": \"{{username}}\",\r\n  \"password\": \"{{psw}}\"\r\n}"
				},
				"url": {
					"raw": "{{url}}/api/Account",
					"host": [
						"{{url}}"
					],
					"path": [
						"api",
						"Account"
					]
				}
			},
			"response": []
		}
	]
}